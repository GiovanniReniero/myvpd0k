<!-- Banner -->
<div class="banner">
  <h2>
  <span id="banner-typed-text"></span>
  </h2>
</div>

<!-- Cards -->
<div class="container">
  <div class="card-group">
    <div class="cards_box mt-5">
      <% @recipes.each do |recipe| %>
        <div class="card " style="height: 360px;">
           <%= image_pack_tag "media#{recipe. photo_url}", class:"card-img-top", alt: ". .."  %> 
          <div class="card-body">
            <h5 class="card-title"><%= recipe.name  %></h5>
            <p class="card-text"> <%= recipe. description %> </p>
            <a href="#" class="btn btn-primary">Go  to the show page</a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

